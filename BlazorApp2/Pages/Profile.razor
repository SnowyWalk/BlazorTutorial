@page "/profile"
@using BlazorApp2.Data
@inject AuthService AuthService

<div class="profile-container">
    <img src="@(AuthService.IsLoggedIn ? AuthService.CurrentUser?.ProfileImageUrl : "images/default-profile.png")" 
         alt="Profile" 
         class="profile-img" />
    <span class="nickname">
        @(AuthService.IsLoggedIn ? AuthService.CurrentUser?.Username : "로그인 해주세요.")
    </span>
</div>

<style>
    .profile-container {
        display: flex;
        align-items: center;
    }
    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 10px;
    }
    .nickname {
        font-size: 1.2em;
        font-weight: bold;
    }
</style>